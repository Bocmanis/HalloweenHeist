@model HaloweenHeist.DTO.Stage3Model

@{
    ViewBag.Title = "Which barrel was poisoned?";
}

<h2>Task 2/3   The poisoned drink</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <h4>Hello @Html.DisplayFor(model => model.UserId)</h4>
    <p>@Html.DisplayFor(model=>model.TaskText)</p>
    <div class="form-group">
        @Html.LabelFor(model => model.Answer, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-lg-9">
            @Html.TextAreaFor(model => model.Answer, new { htmlAttributes = new { @class = "form-control" }, rows ="6", cols="1000" })
            @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
