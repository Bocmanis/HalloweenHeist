@model IEnumerable<HaloweenHeist.Models.RicketyBridge>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <input type="button" value="Seed" onclick="location.href='@Url.Action("Seed", "RicketyBridges")'" />
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WrongAnswer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CorrectAnswer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Speedster1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Speedster2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SlowPoke1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SlowPoke2)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WrongAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CorrectAnswer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speedster1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speedster2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlowPoke1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SlowPoke2)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
